<div class="container" id="app">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1"><img src="{{articles[0].image}}" /></div>
                        {% for index,article in articles if index > 0 %}
						  <div class="tab-pane" id="pic-{{index+1}}"><img src="{{article.image}}" /></div>
                        {% endfor %}
                        </div>
						<ul class="preview-thumbnail nav nav-tabs">
						  <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="{{articles[0].image}}" /></a></li>
                        {% for index,article in articles if index > 0 %}
						  <li><a data-target="#pic-{{index+1}}" data-toggle="tab"><img src="{{article.image}}" /></a></li>
                        {% endfor %}
						</ul>
                        
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{articles[0].titre}} - [{ articles[currentColorSelected].coloris }]</h3>
						
						<p class="product-description">[{descriptionCleaned}]</p>
                        <p class="product-dimension">Dimensions :[{ articles[currentColorSelected].hauteur }] x [{ articles[currentColorSelected].largeur }] x [{ articles[currentColorSelected].longueur}]</p>
                        <p class="product-texture"></p>
						<h4 class="price"><span id="prix-produit">[{ articles[currentColorSelected].prix }] â‚¬</span></h4>
						<h5 class="colors">Couleur :
                            <div class="form-group">
                                <select @change="displayPrice" class="form-control" id="select-color" name="color-selected">
                                    {% for index,article in articles %}
                                    <option value="{{article.coloris}}"
                                            >{{article.coloris}}</option>
                                    {% endfor %}
                                </select>
                            </div>
						</h5>
						<div class="action">
							<button class="add_to_cart_button button btn btn-default" type="button">Ajouter au panier</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

<script>
    const vue = new Vue({
        delimiters: ['[{', '}]'],
        el: "#app",
        data: {
            articles: [
                {% for article in articles %}
                {coloris: "{{article.coloris}}", prix: {{article.prix}}, description: `{{article.description}}`,hauteur:{{article.hauteur}}, largeur:{{article.largeur}},longueur:{{article.longueur}}},
                {% endfor %}
            ],
            currentColorSelected: "{{0}}"
        },
        computed: {
            descriptionCleaned() {
                return(this.articles[this.currentColorSelected].description.replace(/&#039;/gi, "'"));
            }
        },
        methods: {
            displayPrice(e) {
                if(e.target.options.selectedIndex > -1) {
                    const index = e.target.options.selectedIndex
                    this.currentColorSelected = index;
                    
                    document.querySelector(".tab-pane.active").classList.remove("active");
                    document.getElementById("pic-"+(index+1)).classList.add("active");
                }
            }
        }
    });
</script>